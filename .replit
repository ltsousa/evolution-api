[deployment]
run = [
  "sh",
  "-c",
  "python run.py",
]
build = ["sh", "-c", "pip install -r requirements.txt"]

deploymentTarget = "cloudrun"

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"] # mantenha se precisar; o Python vem do replit.nix

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
