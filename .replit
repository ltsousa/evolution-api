[deployment]
run = [
  "sh",
  "-c",
  "uv run --python 3.12 uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-3000} --workers 1 --proxy-headers --forwarded-allow-ips='*' --log-level info",
]
build = ["sh", "-c", "uv sync"]

deploymentTarget = "cloudrun"

# REMOVA a linha abaixo (não é necessária com Nix e às vezes confunde o builder)
# modules = ["python-3.12"]

build = ["sh", "-c", "uv sync"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"] # mantenha se precisar; o Python vem do replit.nix

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv sync && uv run --python 3.12 python -m app.main"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
